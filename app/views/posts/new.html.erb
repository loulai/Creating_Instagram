<%= form_for @post, html: { multipart: true } do |f| %>
	<%= f.label :picture, "Picture:"%><br />
	<%= f.file_field :picture %><br />

	<%= f.label :caption, "Caption:" %><br />
	<%= f.text_area :caption %><br />

	<%= f.label :hashtag, "Hashtags:" %><br />
	<%= f.text_field :hashtag %><br />
	<br />
	<%= f.submit %>

<%end%>