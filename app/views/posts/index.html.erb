<div class="jumbotron posts_index">
	<div class="container">
    <h1>Instagram</h1>
    <p class="lead">You are on the posts page, where you can view your own posts and of people you follow.</p>
    <p><a class="btn btn-lg btn-success" href="posts/new" role="button">Post a Photo</a></p>
  </div>
</div>
 
<% if @posts.any? %>
<div class="all-posts">
 	<% @posts.each do |post| %>
		<div class='row'>  	
 			<div class='col-md-2 col-md-offset-2'>
 				<%= post.user.email %>
 			</div>
 			
 			<div class='col-md-5'>

 				<div class="panel panel-default">
  
				  <div class="panel-heading"><%= image_tag post.picture.url(:medium), class: 'uploaded-picture' %></div>
				  
				  <div class="panel-body">
				    <ul class="list-group">	
				      <li class="list-group-item">CLICK HERE TO LIKE 
				      	| <%= link_to "Delete post", post_path(post), method: :delete %> 
				      	| <%= link_to "Show more", '#', data: {toggle: 'modal', target: ".image-modal-#{post.id}"} %></li>
				      <li class="list-group-item">
				      	<%= post.caption %> 
				        <% post.hashtags.each do |hashtag| %>
				          <%= link_to hashtag.title, hashtag_path(hashtag) %>

								<div class="modal fade image-modal-<%= post.id%> ">
								  <div class="modal-dialog modal-lg">
								    <div class="modal-content">
								      <div class="modal-header">
								        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								        <h4 class="modal-title">Photo by <%= post.user.email %></h4>
								      </div>
								      <div class="modal-body">
								      	<%= image_tag post.picture.url%>
								      </div>
								      
								    </div>
								  </div>
								</div>

				        <% end%></li>
				    
				      <li class="list-group-item">
	
				      	<textarea id="post_comment"  placeholder="comment" name="post[comment]"></textarea><br />
				   																								
				      </li>
				    </ul>
				  </div>
				</div>

	 		</div>
	 		
		</div>

  <%end%>	
</div>

<%else%>
	<p>There are no posts yet</p>
<%end%>



